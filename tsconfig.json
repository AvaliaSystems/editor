{
  "compilerOptions": {
    "target": "es6",
    "module": "es2015",
    "lib": ["esnext", "dom"],
    "moduleResolution": "node",
    "declaration": false,
    "noImplicitAny": false,
    "sourceMap": true,
    "strictNullChecks": false,
    "jsx": "react",
    "suppressImplicitAnyIndexErrors": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "importHelpers": true,
    "resolveJsonModule": true,
    "noEmit": true
  },
  "files": ["src/index.tsx", "src/types.d.ts"]
}
